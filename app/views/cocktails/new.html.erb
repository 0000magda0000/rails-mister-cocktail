<div class="container">
<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>

  <% if false %>
    <%= f.simple_fields_for :ingredient do |i| %>
      <%= i.input :ingredient, collection: @ingredients %>
    <% end %>

    <%= f.simple_fields_for :dose do |d| %>
      <%= d.input :description %>
      <%= d.input :ingredient, collection: @ingredients %>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
</div>
